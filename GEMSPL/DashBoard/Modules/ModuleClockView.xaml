<UserControl x:Class="GEMSPL.DashBoard.Modules.ModuleClockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:clock="clr-namespace:GEMSPL.Clock"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
              Background="Black">
    <GroupBox  Grid.Column="0" MinHeight="200" MinWidth="350" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0">
        <GroupBox.Header>
            <Label Foreground="White" Content="Module Clock" Background="Black" BorderBrush="Black" BorderThickness="0"
                             HorizontalAlignment="Center" Width="Auto" HorizontalContentAlignment="Center" MinWidth="20"/>
        </GroupBox.Header>
        <StackPanel Orientation="Vertical">
        <Grid Name="ModuleClockGrid"/>
            <Button Name="CancelButton" MinWidth="100" Content="Done" Grid.Row="2" Margin="5" HorizontalAlignment="Center"
                    FontSize="15" Click="CancelButton_Click_1" />
        </StackPanel>
    </GroupBox>
</UserControl>
